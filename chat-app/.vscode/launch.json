    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to API",
            "protocol": "auto",
            "restart": true,
            "sourceMaps": true,
            "port": 9200,
            "localRoot": "/Users/miroslav/Documents/Uni/Diplomamunka/chat-app/chat-app/dist",
            "remoteRoot": "/usr/src/app/dist",
            "outFiles": [
              "/Users/miroslav/Documents/Uni/Diplomamunka/chat-app/chat-app/dist//*.js"
            ],
            "skipFiles": ["<node_internals>/"]
          },
    ]
}